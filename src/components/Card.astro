---
export interface Props {
  // width/height
  ratio: '1/1' | '2/1';

  // Card type
  type?: 'horizontal' | 'vertical';
}

// Configurations
type Ratio = "1/1" | "2/1";

const ratioConfig: Record<Ratio, { width: string, height: number }> = {
  "1/1": {
    width: "w-1/3",
    height: 100
  },
  "2/1": {
    width: "w-2/3",
    height: 50
  }
}

const ratio = ratioConfig[Astro.props.ratio];
---

<div id="card" style={ `--card-height: ${ ratio.height }%;` } class={ `${ ratio.width } relative` }>
  <div id="content" class="absolute w-full h-full p-0.25">
    <div class="w-full h-full rounded-2xl bg-slate-50 p-4">
      <slot />
    </div>
  </div>
</div>

<style>
  #card:after {
    content: "";
    display: block;
    padding-bottom: var(--card-height);
  }
</style>